<div class="banner " style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://picsum.photos/seed/picsum/500/2000);">
  <div class="container text-center">
    <h1 class="text-light"><%= @list.name %></h1>
  </div>
</div>
<div class="container">
  <div class="d-flex justify-content-between my-4">
    <%= link_to "Back to all lists", lists_path, class: "btn btn-warning" %>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success text-white" %>
  </div>
</div>
<div class="container">
  <div class="row d-flex justify-content-center">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card mx-3 my-2 col-3">
        <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="<%= bookmark.movie.title %> poster">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <span class="text-secondary"><%= bookmark.movie.rating %> <i class="fa-solid fa-star"></i></span>
          <p class="card-text"><%= bookmark.movie.overview %></p>

          <p><i class="fa-solid fa-quote-left text-secondary"></i>  <%= bookmark.comment %>  <i class="fa-solid fa-quote-right text-secondary"></i></p>
          <%= link_to "Delete",
            bookmark_path(bookmark),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
            class: "btn btn-danger"
          %>
        </div>
      </div>
    <% end %>
  </div>
</div>
