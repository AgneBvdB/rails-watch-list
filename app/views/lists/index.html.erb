<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/7991582/pexels-photo-7991582.jpeg);">
  <div class="container text-center">
    <h1 class="text-light">Save any kind of movies</h1>
    <p class="text-light">Classic</p>
  </div>
</div>
<div class="container d-flex">
  <div class="container col-10">
    <div class="row d-flex justify-content-evenly">
      <% @lists.each do |list| %>
        <div class="card-category mx-4 my-3 col-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://picsum.photos/200/500)">
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="container col-2">
    <%= link_to "Add a new list", new_list_path, class: "btn btn-success me-3 my-3 text-white" %>
  </div>
</div>
